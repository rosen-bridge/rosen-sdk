{
  "extends": "./tsconfig.novite.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "./"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [
    "src",
    "./tests/test-rosen-tokens.json",
    "./tests/test-rosen-loen-tokens.json",
    "./tests/**/**.ts",
    "./tests/**/**/**.ts",
    "./tests/assets/**.json"
  ]
}
